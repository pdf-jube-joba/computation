WHITESPACE = _{ " " | "\n" }

symbol = { "-" | "_" }
name = @{ (ASCII_ALPHA | ASCII_DIGIT | symbol)+ }

number = @{(ASCII_DIGIT)+}
inc = {"inc" ~ number}
dec = {"dec" ~ number}
clr = {"clr" ~ number}
cop = {"cop" ~ number ~ number}
ifz = {"ifz" ~ number ~ "goto" ~ number}
code = {(inc | dec | clr | cop | ifz)+ ~ EOI}
